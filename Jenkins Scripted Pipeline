pipeline {
    agent any
    tools {
        maven "localMaven"
    }
    stages {
        stage('scm checkout') {
            steps {
                git credentialsId: 'git-token', url: 'https://github.com/gopal1409/springchat1.git'
            }
        }
        stage('maven build'){
            steps {
            sh "mvn -Dmaven.test.failure.ignore=true clean package"
            }
        }
        stage('mvn test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('unit test') {
            steps {
                junit 'target/surefire-reports/*.xml'
            }
        }
    }
}
